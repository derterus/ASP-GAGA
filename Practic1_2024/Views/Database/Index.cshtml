@{
    ViewData["Title"] = "Очистка таблиц";
}

<h2>Очистка всех таблиц</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form method="post" asp-action="TruncateTables">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Очистить все таблицы</button>
    </div>
</form>
